.banner
	text-align center
	position: relative
	background-color #000
	background-repeat: no-repeat
	background-position: center center
	z-index: 1
	background-size cover
	padding: 260px 0 190px 0
	color COLOR_TEXT_LIGHT
	margin-bottom 80px
	margin-top -90px

.banner__title
	font-size 40px
	color COLOR_TEXT_LIGHT
	margin-top 0px

.banner__title a
	color COLOR_TEXT_LIGHT
	text-decoration underline

.banner__title__small
	color COLOR_TEXT_LIGHT
	font-size 1em
	text-decoration underline

.banner__title a:hover,
.banner__title__small:hover,
.banner__title__small:active
	color COLOR_TEXT_LIGHT_HOVER

.banner--item-1:before,
.banner--item-2:before,
.banner--item-3:before,
.banner--item-4:before,
.banner--item-5:before,
.banner--item-wedding:before
	background-repeat no-repeat
	background-position center center
	opacity .8
	width 100%
	height 100%
	top 0
	left 0
	position absolute
	z-index -1
	content ""
	background-size cover

.banner--item-1:before
	background-image: url(../img/banners/item-1.jpg)
	opacity 0.7

.banner--item-2:before
	background-image: url(../img/banners/item-2.jpg)
	opacity 0.7

.banner--item-3:before
	background-image: url(../img/banners/item-3.jpg)
	opacity 0.7

.banner--item-4:before
	background-image: url(../img/banners/item-4.jpg)
	opacity 0.7

.banner--item-5:before
	background-image: url(../img/banners/item-5.jpg)
	opacity 1

.banner--item-wedding:before
	background-image: url(../img/banners/wedding/item-1.jpg)
	opacity 0.7


.banner--item-5
	.banner__title
		color COLOR_TEXT_H1

	p,
	.banner__title__small
		color: #8C929B

	.banner__title__small:hover
		color COLOR_TEXT_H1


