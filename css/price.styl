.price-bg
	background-image url('/img/price/hero-pricing.jpg')
	background-repeat no-repeat
	background-position top center
	opacity 0
	webkit-transition: opacity 2s ease-in-out;
	-moz-transition: opacity 2s ease-in-out;
	-ms-transition: opacity 2s ease-in-out;
	-o-transition: opacity 2s ease-in-out;
	transition: opacity 2s ease-in-out;

.price-bg--show
	opacity 1
	webkit-transition: opacity 2s ease-in-out;
	-moz-transition: opacity 2s ease-in-out;
	-ms-transition: opacity 2s ease-in-out;
	-o-transition: opacity 2s ease-in-out;
	transition: opacity 2s ease-in-out;

.price-title
	padding-top 110px
	padding-bottom 100px
	font-size 1.2em

.price-calc__params
	margin-top 30px

.price-calc__summary
	padding 50px 0

@media (min-width: 768px)
	.price-calc__summary
		padding-top 50%
		margin-top -32px

.price-calc__summary__coast
	font-size: 1.8em
	color: #333